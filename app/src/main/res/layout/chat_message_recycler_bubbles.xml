<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/my_primary"
            android:id="@+id/bot_chat_card"
            >
            <ImageView android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/doc_robot"
                android:scaleType="centerCrop"
                android:id="@+id/bot_chat_image"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/my_secondary"
            android:padding="8dp"
            android:layout_marginEnd="80dp"
            android:id="@+id/bot_chat_bubble">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:id="@+id/bot_chat_textview"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/my_primary"
            android:padding="8dp"
            android:layout_marginStart="80dp"
            android:id="@+id/user_chat_bubble">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:id="@+id/user_chat_textview"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/my_tertiary"
            android:id="@+id/user_chat_card"
            >
            <ImageView android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:src="@drawable/user_icon"
                android:scaleType="centerCrop"
                android:tint="@color/my_secondary"
                android:id="@+id/user_chat_image"/>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>